<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.smsdemo.setPassword_Activity"
    android:background="#e1dac8">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edit_password"
        android:layout_above="@+id/setPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="127dp"
        android:hint="输入密码"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:textColorHint="#c8c8c8"
        android:textColor="#393C3E"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="60dp"
        android:id="@+id/edit_password2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="再次输入密码"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:textColorHint="#c8c8c8"
        android:textColor="#393C3E"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/setPassword"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp"
        android:onClick="setpw"
        android:text="设置密码"
        android:textColor="#f1ffe7"
        android:background="#1db9f2"
        android:textSize="30sp"/>

</RelativeLayout>
