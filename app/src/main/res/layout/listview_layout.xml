<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/listview_layput">
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#FFF0F0F0"
        android:id="@+id/shangmian_liubai"
        android:alpha="1"></LinearLayout>//这是上面那个色块

                                          //下面是三个内容的布局
  <RelativeLayout
        android:layout_width="wrap_content"

        android:id="@+id/zuo_you"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:clickable="true">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="#F0F0F0"
            android:id="@+id/zuobian_kongbai"></LinearLayout>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:id="@+id/youbian_kongbai"
            android:background="#F0F0F0"
            android:layout_alignParentRight="true"> </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
       android:layout_toRightOf="@id/zuobian_kongbai"

        android:layout_toLeftOf="@id/youbian_kongbai"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="this is a titlethis is a titlethis is a title"
        android:textSize="30sp"
        android:id="@+id/title"/>

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textview_tag"
    android:text="方所文化"
    android:textSize="20sp"
    android:layout_alignParentLeft="true"

/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_date"
        android:text="20150315  "
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        />
 </RelativeLayout>
    </LinearLayout>




    </RelativeLayout>
</LinearLayout>
